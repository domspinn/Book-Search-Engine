{
  "name": "book-search-engine",
  "version": "1.0.0",
  "description": "A MERN stack application to search and save books using Google Books API, refactored to use GraphQL and Apollo.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "develop": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "server": "nodemon server.js",
    "client": "cd client && npm run dev",
    "heroku-postbuild": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^3.7.0",
    "bcrypt": "^5.0.1",
    "concurrently": "^6.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.7"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
